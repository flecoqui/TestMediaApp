            <Grid x:Name="waitRing"
                  Grid.RowSpan="2"
                  Grid.ColumnSpan="2"
                  Visibility="Collapsed">
                <Rectangle Fill="Black"
                           Opacity="0.2" />
                <ProgressRing Width="100"
                              Height="100"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Foreground="{StaticResource ApplicationForegroundThemeBrush}"
                              IsActive="True" />
            </Grid>
