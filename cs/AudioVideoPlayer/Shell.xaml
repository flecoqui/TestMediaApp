                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <SymbolIcon Grid.Column="0" Symbol="{x:Bind Icon, Mode=OneWay}" Foreground="White" />
                <TextBlock Grid.Column="1" Text="{x:Bind Name, Mode=OneWay}" FontSize="16" VerticalAlignment="Center" Foreground="White" />
            </Grid>
            
            <controls:HamburgerMenuGlyphItem Glyph="{x:Bind Icon}" Label="{x:Bind Name}"/>-->
        </DataTemplate>

    </Page.Resources>
    <controls:HamburgerMenu x:Name="HamburgerMenu"
                            Foreground="White"
                            ItemClick="HamburgerMenu_OnItemClick"
                            ItemTemplate="{StaticResource ButtonTemplate}"
                            OptionsItemClick="HamburgerMenu_OnOptionsItemClick"
                            OptionsItemTemplate="{StaticResource OptionTemplate}"
                            PaneBackground="{Binding Settings.MenuColor,Converter={StaticResource ColorToSolidColorBrushConverter}}"
                            DisplayMode="Overlay"
                            IsPaneOpen="False"
                            HamburgerVisibility="Visible"
                            OpenPaneLength="147"
                            CompactPaneLength="44"
                            HamburgerHeight="41"
                                    Style="{StaticResource HamburgerMenuTemplate}"
                            >
<!-- 
                                    Style="{StaticResource HamburgerMenuTemplate}"
-->
        <Grid x:Name="RootGrid"
              Background="{StaticResource Brush-Grey-05}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
